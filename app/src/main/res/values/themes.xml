    <!-- Tema Monocromático -->
    <style name="Mono" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/monoPrimary</item>
        <item name="colorPrimaryDark">@color/monoDark</item>
        <item name="colorAccent">@color/monoAccent</item>
        <item name="colorSecondary">@color/monoPrimary</item>
        <item name="background">@color/monoLight</item>
    </style>

    <!-- Tema Triádico -->
    <style name="Triad" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/triadPrimary</item>
        <item name="colorPrimaryDark">@color/triadTertiary</item>
        <item name="colorAccent">@color/triadAccent</item>
        <item name="colorSecondary">@color/triadSecondary</item>
        <item name="background">@color/triadPrimary</item>
    </style>

    <!-- Tema Quadrático -->
    <style name="Quad" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/quadPrimary</item>
        <item name="colorPrimaryDark">@color/quadTertiary</item>
        <item name="colorAccent">@color/quadQuaternary</item>
        <item name="colorSecondary">@color/quadSecondary</item>
        <item name="background">@color/quadPrimary</item>
    </style>

    <!-- Tema Base -->
